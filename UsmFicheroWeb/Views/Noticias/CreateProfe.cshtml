@model UsmFicheroWeb.Noticias
@Styles.Render("~/Content/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "Crear Noticias Profe";
}

<h2>Crear Noticias</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Noticias</legend>

        @*<div class="editor-label">
                @Html.LabelFor(model => model.IdNoticias)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.IdNoticias)
                @Html.ValidationMessageFor(model => model.IdNoticias)
            </div>*@

        <div class="editor-label">
            @Html.LabelFor(model => model.ContenidoNoticia)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContenidoNoticia)
            @Html.ValidationMessageFor(model => model.ContenidoNoticia)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CodAsignatura)
        </div>
        <div class="editor-field">
            @*@Html.EditorFor(model => model.CodAsignatura)*@
            @Html.DropDownList("CodAsignatura", ViewBag.ListAsignatura as SelectList, "Elija una Asignatura. ",
                                       new { onchange = "getAlldata()" })
            @Html.ValidationMessageFor(model => model.CodAsignatura)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IdCarrera)
        </div>
        <div class="editor-field">
            @*@Html.EditorFor(model => model.IdCarrera)*@
            @Html.DropDownList("IdCarrera", ViewBag.ListCarreras as SelectList, "Elija una carrera si es profesor o alumno. ",
                                       new { onchange = "getAlldata()" })
            @Html.ValidationMessageFor(model => model.IdCarrera)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RutAutor, "Usuarios")
        </div>
        <div class="editor-field">
            @Html.DropDownList("RutAutor", String.Empty)
            @Html.ValidationMessageFor(model => model.RutAutor)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div class="btn btn-danger">
    @Html.ActionLink("Regresar", "GeneralProfe", "Login")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
