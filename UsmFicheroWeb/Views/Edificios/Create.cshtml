@model UsmFicheroWeb.Edificios
@Styles.Render("~/Content/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "Crear Edificio";
}

<h2>Crear Edificio</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edificios</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CodEdificios)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CodEdificios)
            @Html.ValidationMessageFor(model => model.CodEdificios)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CantidadSalas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CantidadSalas)
            @Html.ValidationMessageFor(model => model.CantidadSalas)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NumerosBaños)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumerosBaños)
            @Html.ValidationMessageFor(model => model.NumerosBaños)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Oficinas)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Oficinas)
            @Html.ValidationMessageFor(model => model.Oficinas)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div class="btn btn-danger">
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
