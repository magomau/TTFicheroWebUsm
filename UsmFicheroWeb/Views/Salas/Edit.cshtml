@model UsmFicheroWeb.Salas
@Styles.Render("~/Content/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "Editar Sala";
}

<h2>Editar Sala</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Salas</legend>

        <div class="editor-label" style="display:none">
            @Html.LabelFor(model => model.CodSala)
        </div>
        <div class="editor-field" style="display:none">
            @Html.EditorFor(model => model.CodSala)
            @Html.ValidationMessageFor(model => model.CodSala)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CodEdificio, "Edificios")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CodEdificio", String.Empty)
            @Html.ValidationMessageFor(model => model.CodEdificio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxAlumnos)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxAlumnos)
            @Html.ValidationMessageFor(model => model.MaxAlumnos)
        </div>

        <p>
            <input type="submit" value="Modificar" />
        </p>
    </fieldset>
}

<div class="btn btn-danger">
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
