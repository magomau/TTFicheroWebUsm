@model IEnumerable<UsmFicheroWeb.Salas>
@Styles.Render("~/Content/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "Administracion Salas";
}
<header>
    <div class="wrappr">
        <div class="UsuarioActual">
            Administrador:  <b>@ViewData["UsuarioActualNombre"]</b>
        </div>
        <div>
            <p class="site-title">@Html.ActionLink("Fichero Usm", "Index", "Home", new { @style = "color:white" })</p>
        </div>
        <div class="float-right">
            <nav>
                <ul id="menu">
                    <li id="m1">@Html.ActionLink("Cerrar Sesion", "Index", "Login")</li>
                    @*<li id="m2">@Html.ActionLink("Perfil Privado", "Privado", "Login")</li>
                        <li id="m3">@Html.ActionLink("Perfil General", "General", "Login")</li>*@
                </ul>
            </nav>
        </div>
    </div>
</header>

<h2>Salas</h2>

<p>
    @Html.ActionLink("Crear Nueva Sala", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Codigo Sala
        </th>
        <th>
            Codigo Departamento
        </th>
        <th>
            Maximo de alumnos
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodSala)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edificios.CodEdificios)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxAlumnos)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Edit", new { id = item.CodSala/* id=item.PrimaryKey */ }) |
            @*@Html.ActionLink("Details", "Details", new { id = item.CodSala/* id=item.PrimaryKey */ }) |*@
            @Html.ActionLink("Eliminar", "Delete", new { id = item.CodSala/* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>

<p class="btn btn-danger">
    @Html.ActionLink("Regresar", "Index", "Adminstrador")
</p>

<style>
    .fila {
        overflow: hidden;
    }

    .UsuarioActual {
        float: right;
        padding-top: 0px;
        padding-right: 0px;
        padding-bottom: 50px;
        padding-left: 80px;
    }

    .celda {
        padding: 0.25em 2em 0.25em .5em;
        border: 0 none;
        width: 100px;
        height: 50px;
        float: left;
        border: solid;
    }

    .celda2 {
        padding: 0.25em 2em 0.25em .5em;
        border: 0 none;
        width: 100px;
        height: 20px;
        float: left;
        border: solid;
        text-align: center;
    }

    .wrappr {
        background-color: #7ac0da;
        background-image: -ms-linear-gradient(left, #7ac0da 0%, #a4d4e6 100%);
        background-image: -o-linear-gradient(left, #7ac0da 0%, #a4d4e6 100%);
        background-image: -webkit-gradient(linear, left top, right top, color-stop(0, #7ac0da), color-stop(1, #a4d4e6));
        background-image: -webkit-linear-gradient(left, #7ac0da 0%, #a4d4e6 100%);
        background-image: linear-gradient(left, #7ac0da 0%, #a4d4e6 100%);
        color: #3e5667;
        padding: 20px 40px 30px 40px;
    }
</style>
