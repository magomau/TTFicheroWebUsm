@model IEnumerable<UsmFicheroWeb.Horarios>
@Styles.Render("~/Content/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "CambiosHorario";
}

<header>
    <div class="wrappr">

        <div class="UsuarioActual">
            Profesor:  <b>@ViewData["UsuarioActualNombre"]</b>
        </div>
        <div>
            <p class="site-title">@Html.ActionLink("Fichero Usm", "Index", "Home", new { @style = "color:white" })</p>
        </div>
        <div class="float-right">
            <nav>
                <ul id="menu">
                    <li id="m1">@Html.ActionLink("Cerrar Sesion", "Index", "Login")</li>
                    <li id="m3">@Html.ActionLink("Perfil General", "GeneralProfe", "Login")</li>
                    <li id="m2">@Html.ActionLink("Cambiar Contraseña", "contrasenaprof", "Login")</li>
                </ul>
            </nav>
        </div>
    </div>
</header>

<h2>Cambios Horarios</h2>

<h3>Horario Actual</h3>

<div>

    <table class="table">
        <tr>
            <th>Horas</th>
            <th>Lunes</th>
            <th>Martes</th>
            <th>Miercoles</th>
            <th>Jueves</th>
            <th>Viernes</th>
        </tr>
        @foreach (var item in ViewBag.ListCalendario)
        {
            <tr>
                <td>@item[0]</td>
                <td>@item[1]</td>
                <td>@item[2]</td>
                <td>@item[3]</td>
                <td>@item[4]</td>
                <td>@item[5]</td>

            </tr>
        }
    </table>

</div>

<h3> Cambiar horas del horario</h3>

<p class="btn btn-primary">
    @Html.ActionLink("Crear Horario", "CreateProfe")
</p>

<table class="table">
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.Asignaturas.CodAsig)
        </td>
        <th>
            @Html.DisplayNameFor(model => model.Asignaturas.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modificado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora.CodHora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salas.CodSala)
        </th>
        <th>
            Rut Profesor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaModi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paralelo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Asignaturas.CodAsig)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asignaturas.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modificado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora.CodHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salas.CodSala)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuarios.Rut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaModi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paralelo)
            </td>
            <td class="btn btn-info">
                @Html.ActionLink("Modificar", "EditProfe", new { idd = item.Dia, idh = item.CodHora, ida = item.CodAsignatura, idm = item.Modificado, idp = item.Paralelo }) |
                @Html.ActionLink("Eliminar", "DeleteProfe", new { idd = item.Dia, idh = item.CodHora, ida = item.CodAsignatura, idm = item.Modificado, idp = item.Paralelo })
            </td>
        </tr>
    }

</table>


<div class="btn btn-danger">
    @Html.ActionLink("Regresar", "PrivadoProfe", "Login")
</div>

<style>

            table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
              }

    td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
           }

   tr:nth-child(even) {
    background-color: #dddddd;
                      }

    .fila {
        overflow: hidden;
        margin-top: 0.75em;
    }

    .UsuarioActual {
        float: right;
        padding-top: 0px;
        padding-right: 0px;
        padding-bottom: 50px;
        padding-left: 80px;
    }

    .ImagenPerfil {
        float: right;
        padding-top: 0px;
        padding-right: 50px;
        padding-bottom: 0px;
        padding-left: 0px;
    }

    .celda {
        padding: 0.25em 2em 0.25em .5em;
        border: 0 none;
        width: 100px;
