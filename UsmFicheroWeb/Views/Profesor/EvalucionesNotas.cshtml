@model IEnumerable<UsmFicheroWeb.UsuarioAsignatura>
@Styles.Render("~/Content/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@{
    ViewBag.Title = "EvalucionesNotas";
}

<header>
    <div class=wrappr>

        <div class=UsuarioActual>
            Profesor:  <b>@ViewData["UsuarioActualNombre"]</b>
        </div>
        <div>
            <p class=site-title>@Html.ActionLink("Fichero Usm", "Index", "Home", new { @style = "color:white" })</p>
        </div>
        <div class=float-right>
            <nav>
                <ul id="menu">
                    <li id="m1">@Html.ActionLink("Cerrar Sesion", "Index", "Login")</li>
                    <li id="m3">@Html.ActionLink("Perfil General", "GeneralProfe", "Login")</li>
                    <li id="m2">@Html.ActionLink("Cambiar Contraseña", "contrasenaprof", "Login")</li>
                </ul>
            </nav>
        </div>
    </div>
</header>

<h2>Evaluaciones y Notas</h2>

<div class="container">
    <table class="table table-hover">
        <thead>
            <th>
                @Html.DisplayNameFor(model => model.Usuarios.Rut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuarios.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Asignaturas.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semestre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paralelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RutProfesor)
            </th>
            <th></th>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuarios.Rut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuarios.Nombre)
                    @Html.DisplayFor(modelItem => item.Usuarios.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Asignaturas.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Año)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semestre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nota1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nota2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nota3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nota4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nota5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paralelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RutProfesor)
                </td>
                <td class="btn btn-info">
                    @Html.ActionLink("Modificar", "EditNotaProfe", new { id = item.RutUsuario, id2 = item.CodAsignatura /* id=item.PrimaryKey */ })
                    @*@Html.ActionLink("Details", "Details", new { id = item.RutUsuario /* id=item.PrimaryKey */ }) |*@
                    @*@Html.ActionLink("Eliminar", "DeleteNotaProfe", new { id = item.RutUsuario, id2 = item.CodAsignatura/* id=item.PrimaryKey */ })*@
                </td>
            </tbody>
        }

    </table>
</div>

<div class="btn btn-danger">
    @Html.ActionLink("Regresar", "PrivadoProfe", "Login")
</div>

